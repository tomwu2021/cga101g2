<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.sort1.mapper.Sort1Mapper">
	<resultMap id="Sort1Map" type="Sort1">
		<id property="sort1Id" column="sort1_id" javaType="Integer" jdbcType="INTEGER" />
		<result property="sort1Name" column="sort1_name" javaType="String" jdbcType="VARCHAR" />
	</resultMap>
	
	<insert id="insert" parameterType="Sort1" useGeneratedKeys="true" keyProperty="sort1Id" keyColumn="sort1_id">
	insert into cga_01.SORT1(sort1_name) values (#{sort1Name})
	</insert>
	
	<delete id="deleteById" parameterType="Integer">
	delete from cga_01.SORT1 where sort1_id = #{sort1Id}
	</delete>

	<update id="updateById" parameterType="Sort1">
	update cga_01.SORT1 set sort1_name = #{sort1Name}
	where sort1_id = #{sort1Id}
	</update>

	<select id="getOneById" parameterType="Integer" resultType="Sort1">
	SELECT * from cga_01.SORT1 where sort1_id = #{sort1Id}
	</select>

	<select id="selectAll" resultMap="Sort1Map">
	select * from cga_01.SORT1
	</select>
</mapper>